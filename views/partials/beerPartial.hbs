<div class="{{#if detailedView}}detailed-view{{/if}} card">
  <img src={{this.image_url}} alt='Image of Beer' />
  <div class="content">
    <a href='/beers/{{id}}'><h4 class='card-title'>{{name}}</h4></a>
    <p class="tagline">{{tagline}}</p>
    <p class="description">{{description}}</p>
    {{#if detailedView}}
    <h5>Food Pairing</h5>
      <ul class="food-pairing">
        {{#each food_pairing}}
          <li>{{this}}</li>
          {{/each}}
      </ul>
      <p class"brewers-tips"><strong>Brewers tips:</strong>{{brewers_tips}}</p>
    {{/if}}
  </div>
</div>